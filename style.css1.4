nav {
    display: inline-block; /*naast andere content*/
    position: fixed; /*blijft staan als je scrolled*/
}

aside {
    max-width: 20em; /*breedte*/
    display: inline-block; /*naast andere content*/
    float: right; /*rechts van het scherm*/
}

main {
    max-width: 40em; /*breedte*/
    text-align: justify; /*uitlijnen*/
    margin-left: 20%; /*in het midden*/
    margin-right: 20%;
    margin-top: 15%; /*onder header*/
}

header {
    position: fixed; /*blijft staan als je scrolled*/
    margin-top: -15%; /*naar bovenkant*/
}

section.verhalen {
    column-count: 2; /*2 kolommen*/
}
